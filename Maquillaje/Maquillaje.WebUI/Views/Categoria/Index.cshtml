@model IEnumerable<Maquillaje.WebUI.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cat_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cat_Descripcion)
            </th>
            <th>
                Acciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cat_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat_Descripcion)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.cat_Id">Edit</a> |
                <a class="btn btn-info"    asp-action="Details" asp-route-id="@item.cat_Id">Details</a> |
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.cat_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
